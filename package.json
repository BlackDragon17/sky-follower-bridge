{
  "name": "sky-follower-bridge",
  "displayName": "Sky Follower Bridge",
  "version": "0.6.5",
  "description": "Instantly find and follow the same users from your Twitter follows on Bluesky.",
  "author": "kawamataryou",
  "type": "module",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv3",
    "package": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv3",
    "run-client": "ts-node --project tsconfig.script.json scripts/client.ts",
    "lint": "eslint ."
  },
  "dependencies": {
    "@atproto/api": "0.6.20",
    "@changesets/cli": "2.26.2",
    "@plasmohq/messaging": "0.5.0",
    "@plasmohq/storage": "1.8.0",
    "plasmo": "0.83.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-pattern": "5.0.5",
    "vanjs-core": "1.2.1"
  },
  "devDependencies": {
    "@eslint/js": "8.51.0",
    "@types/chrome": "0.0.243",
    "@types/node": "20.5.0",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.16",
    "daisyui": "3.5.1",
    "eslint": "8.51.0",
    "eslint-config-flat-gitignore": "0.1.0",
    "eslint-plugin-react": "7.33.2",
    "globals": "13.23.0",
    "postcss": "8.4.31",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6"
  },
  "manifest": {
    "host_permissions": [
      "https://bsky.social/*",
      "https://twitter.com/*",
      "https://x.com/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "sky-follower-bridge@ryo.kawamata"
      }
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Alt+B",
          "mac": "Alt+B"
        }
      }
    }
  },
  "volta": {
    "node": "16.20.0"
  }
}
